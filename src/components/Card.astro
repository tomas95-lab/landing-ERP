---
import {
  Card as UICard,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card"

const { title, description } = Astro.props
---

<UICard>
    <CardHeader>
        <CardTitle>{title}</CardTitle>
        <CardDescription className="text-justify">{description}</CardDescription>
    </CardHeader>
    <CardContent>
        <slot name="slot-content" />
    </CardContent>
    <CardFooter>
        <slot name="slot-footer" />
    </CardFooter>
</UICard>
